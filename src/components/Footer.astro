---
import { metaData, socialLinks } from "../config";
const YEAR = new Date().getFullYear();
---

<footer id="contact" class="bg-gray-900 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold mb-4">{metaData.name}</h3>
        <p class="text-gray-400">
          Full-stack developer passionate about creating amazing web
          experiences.
        </p>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li>
            <a
              href="#home"
              class="text-gray-400 hover:text-theme-orange transition-colors"
              >Home</a
            >
          </li>
          <li>
            <a
              href="#about"
              class="text-gray-400 hover:text-theme-orange transition-colors"
              >About</a
            >
          </li>
          <li>
            <a
              href="/blog"
              class="text-gray-400 hover:text-theme-orange transition-colors"
              >Blog</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-4">Contact</h4>
        <p class="text-gray-400 mb-2">Ready to work together?</p>
        <a
          href={socialLinks.email}
          class="text-theme-orange hover:text-theme-orange-light transition-colors"
        >
          vikas@kapadiya.net
        </a>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center">
      <p class="text-gray-400">
        Â© {YEAR} Vikas Kapadiya. All rights reserved.
      </p>
    </div>
  </div>
</footer>
