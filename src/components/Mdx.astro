---
interface Props {
  content: string;
}

import { Markdown } from "astro-remote";

import CodeBlock from "@components/mdx/CodeBlock.astro";
import Image from "@components/mdx/Image.astro";
import ImageGrid from "./mdx/ImageGrid.astro";
import Tweet from "@components/mdx/Tweet.astro";
import Caption from "@components/mdx/Caption.astro";
import Callout from "@components/mdx/Callout.astro";
import YouTube from "@components/mdx/YouTube.astro";
import CustomLink from "@components/mdx/CustomLink.astro";
import Heading from "@components/mdx/Heading.astro";
import Table from "@components/mdx/Table.astro";

const { content } = Astro.props;
---

<article class="prose prose-quoteless dark:prose-invert">
  <Markdown
    sanitize={{ allowComponents: true }}
    content={content}
    components={{
      Heading,
      Image,
      ImageGrid,
      CodeBlock,
      Tweet,
      YouTube,
      Caption,
      Callout,
      a: CustomLink,
    }}
  />
</article>
