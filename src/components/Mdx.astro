---
interface Props {
  content: string | undefined;
}

import { Markdown } from "astro-remote";

import CodeBlock from "@components/mdx/CodeBlock.astro";
import Image from "@components/mdx/Image.astro";
import CustomLink from "@components/mdx/CustomLink.astro";
import Heading from "@components/mdx/Heading.astro";
import ProTip from "@components/mdx/ProTip.astro";
import FeaturedImage from "@components/mdx/FeaturedImage.astro";
import Paragraph from "@components/mdx/Paragraph.astro";

const { content } = Astro.props;
---

<Markdown
  sanitize={{ allowComponents: true }}
  content={content}
  components={{
    Heading,
    Image,
    CodeBlock,
    ProTip,
    FeaturedImage,
    a: CustomLink,
    p: Paragraph,
  }}
/>
